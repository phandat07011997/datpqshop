@model DatPQShop.Web.Infrastructure.Core.PaginationSet<DatPQShop.Web.Models.ProductViewModel>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/Layouts.cshtml";
    var category = (DatPQShop.Web.Models.ProductCategoryViewModel)ViewBag.Category;

}

<div class="women-product">
    <div class="w_content">
        <div class="women">
            <a href="/@(category.Alias).pc-@(category.ID).html"><h4>@category.Name<span>@Model.TotalCount sản phẩm</span> </h4></a>
            <ul class="w_nav">
                <li>Sắp xếp theo : </li>
                <li><a class="active" href="?page=@(Model.Page)&sort=popular">Phổ biến</a></li> |
                <li><a href="?page=@(Model.Page)">Sản phẩm mới</a></li> |
                <li><a href="?page=@(Model.Page)&sort=discount">Khuyến mại</a></li> |
                <li><a href="?page=@(Model.Page)&sort=price">Giá</a></li>
                <div class="clearfix"></div>
            </ul>
            <div class="clearfix"></div>
        </div>
    </div>
    <!-- grids_of_4 -->
    <div class="grid-product">
        @if (Model.Count > 0)
        {
            foreach (var product in Model.Items)
            {
                var url = "/" + product.Alias + ".p-" + product.ID + ".html";

                <div class="product-grid">
                    <div class="content_box">
                        <a href="@url"></a>
                        <div class="left-grid-view grid-view-left">
                            <a href="@url">
                                <img class="img-responsive watch-right" alt="@product.Name" src="@product.Image">
                                <div class="mask">
                                    <div class="info">Xem nhanh</div>
                                </div>
                            </a>
                        </div>
                        <h4><a href="@url">@product.Name</a></h4>
                        <p>@product.Description</p>
                        @(product.Price==0?"Liên hệ":product.Price.ToString("N0")) 
                    </div>

                </div>


            }

            <div class="clearfix"> </div>
            if (Model.TotalPages > 1)
            {
                // Create numeric links
                var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
                var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

                <nav>
                    <ul class="pagination">
                        @if (Model.Page > 1)
                        {
                            <li>
                                <a href="?page=1" aria-label="First">
                                    <i class="fa fa-angle-double-left"></i>
                                </a>
                            </li>
                            <li>
                                <a href="?page=@(Model.Page-1)" aria-label="Previous">
                                    <i class="fa fa-angle-double-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            if (Model.Page == i)
                            {
                                <li class="active"><a href="?page=@i" title="Trang @i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="?page=@i" title="Trang @i">@i</a></li>
                            }
                        }
                        @if (Model.Page < Model.TotalPages)
                        {
                            <li>
                                <a href="?page=@(Model.Page+1)" aria-label="Next">
                                    <i class="fa fa-angle-double-right"></i>
                                </a>
                            </li>
                            <li>
                                <a href="?page=@Model.TotalPages" aria-label="Last">
                                    <i class="fa fa-angle-double-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center">Không có bản ghi nào được tìm thấy</div>
        }
    </div>
</div>
